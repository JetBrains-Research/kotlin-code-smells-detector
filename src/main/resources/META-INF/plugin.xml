<idea-plugin url="https://github.com/JetBrains-Research/kotlin-code-smells-detector">
    <name>KotlinCodeSmellDetector</name>
    <version>2019.3-1.0</version>
    <vendor url="https://research.jetbrains.org/">JetBrains-Research</vendor>

    <description><![CDATA[Detects code smells in Kotlin code and recommends appropriate refactorings to resolve them.
         ]]>
    </description>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="KotlinCodeSmellDetector" secondary="true" anchor="bottom"
                    factoryClass="org.jetbrains.research.kotlincodesmelldetector.ide.ui.RefactoringsToolWindowFactory"/>
    </extensions>

    <depends>org.jetbrains.kotlin</depends>

</idea-plugin>